    #MinimapIcon 1 Green Square
    #PlayEffect Green

#===============================================================================================================
# Hide Scrolls of Wisdom
#===============================================================================================================

Hide
BaseType "Scroll of Wisdom"
AreaLevel >= 20
    SetFontSize 20
    SetTextColor 220 190 132
    SetBorderColor 255 255 255 150
    SetBackgroundColor 0 0 0 150

#===============================================================================================================
# Quest Items
#===============================================================================================================

Show
Class = Quest Items
    SetFontSize 20
    SetBorderColor 0 191 0 200
    SetBackgroundColor 0 0 0 150

